# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://user:password@neon.tech/gunscope?sslmode=require

# OpenAI API Key (REQUIRED for AI enrichment)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_KEY2=sk-your-backup-key-here

# Firecrawl API Key (REQUIRED for auction scraping)
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key-here

# Mapbox Public Key (for maps)
VITE_MAPBOX_PUBLIC_KEY=pk.your-mapbox-token-here

# Optional: Reuse existing OpenAI assistants
FIREARMS_ASSISTANT_ID=asst_xxxxx
VECTOR_STORE_ID=vs_xxxxx

# Optional: Email alerts (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-key-here
ALERT_EMAIL_FROM=alerts@gunscope.ai

# Optional: SMS alerts (Twilio)
TWILIO_SID=ACxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_FROM=+1234567890

# App URLs
VITE_API_URL=https://gunscope-api.railway.app
FRONTEND_URL=https://gunscope.vercel.app

# Node Environment
NODE_ENV=development
PORT=5001

